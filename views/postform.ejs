<% include ./partials/header.ejs %>

    <div class="bg-green-100 flex items-center justify-center h-screen">
        <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-2xl">
            <h2 class="text-2xl font-bold mb-6" style="color: #4CAF50;">Create a New Post</h2>
            <form action="/upload" method="POST" enctype="multipart/form-data" class="space-y-6">
                <div>
                    <label for="postImage" class="block text-gray-700 font-bold mb-2">Post Image</label>
                    <input type="file" name="postImage" id="postImage"
                        class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500"
                        required>
                </div>
                <div>
                    <label for="postCaption" class="block text-gray-700 font-bold mb-2">Post Caption</label>
                    <textarea name="caption" id="postCaption" rows="4"
                        class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500"
                        placeholder="Write a caption..." required></textarea>
                </div>
                <div>
                    <button type="submit"
                        class="bg-green-500 text-white py-2 px-4 rounded-md hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-500">Create
                        Post</button>
                </div>
            </form>
        </div>
    </div>

    <% include ./partials/footer.ejs %>